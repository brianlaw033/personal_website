      <div class='panel panel-primary navbar-fixed-bottom col-xs-offset-9 chatbox'>
        <div class='panel-body'>
          <ul class='chat'>
            <div class='header'>
              <small class='text-muted'>
                <span class='glyphicon glyphicon-time'> <%=time_ago_in_words(Time.now)%> ago </span>
              </small>
              <strong class='pull-right primary-font'> Brian </strong>
            </div>
            <p>
              Hi, I am still learning English, please accept my apology if I misunderstands you.
            </p>
          </ul>
        </div>
        <div class='panel-footer'>
          <%= form_for bot_action, url: bot_actions_process_user_input_path, remote: true do |f| %>
            <div class='input-group'>
              <%= f.text_field 'user_input', autocomplete: 'off', class: 'form-control input-sm', id: 'btn-input', placeholder: 'Type your message here...'%>
              <span class='input-group-btn'></span>
              <%= f.submit 'Send', class: 'btn btn-sm', id: 'btn-chat' ,style:'float: right;'%>
            </div>
          <% end %>
        </div>
      </div>

